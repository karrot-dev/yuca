map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

upstream {{ site }}-backend {
    {% for n in range(workers) %}
    server http://unix:/tmp/{{ site }}@{{ n+1 }}.sock;
    {% endfor %}
}

server {

    server_name {{ server_name }};

    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    ssl_certificate /var/www/{{ site }}/cert/fullchain.pem;
    ssl_certificate_key /var/www/{{ site }}/cert/key.pem;

    access_log /var/www/{{ site }}/log/access.log;
    error_log /var/www/{{ site }}/log/error.log;

    root {{ static_root }};

    {% if apk is defined %}
    location =/app.apk {
        alias {{ apk }};
    }
    {% endif %}

    location /js {
      expires max;
    }

    location /img {
      expires max;
    }

    location ~* ^/app\..+\.css$ {
      expires max;
    }

    location /fonts {
      expires max;
    }

    location / {
        try_files $uri /index.html;

        # kill cache
        add_header Last-Modified $date_gmt;
        add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
        if_modified_since off;
        expires off;
        etag off;
    }

    location ~ ^\/(api(\-auth)?|docs)\/ {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header Host $host;
        proxy_pass {{ site }}-backend;
        proxy_redirect off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Sec-WebSocket-Extensions $http_sec_websocket_extensions;
        proxy_set_header Sec-WebSocket-Key $http_sec_websocket_key;
        proxy_set_header Sec-WebSocket-Protocol $http_sec_websocket_protocol;
        proxy_set_header Sec-WebSocket-Version $http_sec_websocket_version;
    }

    location /static/ {
        root /var/www/{{ site }}/www/;
    }

    location /media/ {
        alias /var/www/{{ site }}/www/{{ uploads_directory }}/;
        expires max;
    }

}
