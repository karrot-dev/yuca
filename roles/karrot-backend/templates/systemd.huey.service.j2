# This file is managed by ansible. It belongs to {{ role_path }}.
# See https://github.com/karrot-dev/yuca to change.
[Unit]
Description={{ site }} | huey worker
After=network.target

[Service]
Type=simple
User={{ site }}
Group={{ site }}
WorkingDirectory=/var/www/{{ site }}/www/backend
EnvironmentFile=/var/www/{{ site }}/www/backend/.env
ExecStart=/var/www/{{ site }}/www/backend/karrot-backend.pyz worker
Restart=always

[Install]
WantedBy=multi-user.target
